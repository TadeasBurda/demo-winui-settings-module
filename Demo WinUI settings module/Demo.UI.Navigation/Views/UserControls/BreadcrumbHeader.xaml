<?xml version="1.0" encoding="utf-8" ?>
<UserControl
  x:Class="Demo.UI.Navigation.Views.UserControls.BreadcrumbHeader"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:Demo.UI.Navigation.Views.UserControls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:viewmodels="using:Demo.UI.Navigation.ViewModels.UserControls"
  d:DataContext="{d:DesignInstance Type=viewmodels:BreadcrumbHeaderViewModel}"
  mc:Ignorable="d">
  <!--
    StackPanel: Arranges child elements into a single line that can be oriented horizontally or vertically.
    x:Name: Sets the name of the StackPanel element.
    Margin: Sets the margin around the StackPanel.
    Orientation: Sets the orientation of the StackPanel to horizontal.
  -->
  <StackPanel
    x:Name="_stackPanel"
    Margin="0,0,0,36"
    Orientation="Horizontal" />
</UserControl>
