<?xml version="1.0" encoding="utf-8" ?>
<Page
  x:Class="Demo.UI.Settings.Views.Pages.SettingsPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:Demo.UI.Settings.Views.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:usercontrols="using:Demo.UI.Settings.Views.UserControls"
  xmlns:viewmodels="using:Demo.UI.Settings.ViewModels.Pages"
  d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
  mc:Ignorable="d">
  <!--
    Grid: Defines a flexible grid area that consists of columns and rows.
    Margin: Sets the margin around the Grid.
  -->
  <Grid Margin="36,40,15,0">
    <!--
      StackPanel: Arranges child elements into a single line that can be oriented horizontally or vertically.
      Grid.Row: Sets the row in which the StackPanel is placed.
    -->
    <StackPanel Grid.Row="1">
      <!--
        CardGroup: Represents a group of settings cards.
        Title: Sets the title of the CardGroup.
      -->
      <usercontrols:CardGroup Title="Database">
        <!--
          CardGroup.Children: Defines the child elements of the CardGroup.
        -->
        <usercontrols:CardGroup.Children>
          <!--
            SettingsCard: Represents a settings card.
            Title: Sets the title of the SettingsCard.
            Command: Binds the command to the ViewModel's NavigateToDatabaseSettingsPageCommand.
            Description: Sets the description of the SettingsCard.
            Glyph: Sets the glyph of the SettingsCard.
          -->
          <usercontrols:SettingsCard
            Title="Local database"
            Command="{x:Bind ViewModel.NavigateToDatabaseSettingsPageCommand}"
            Description="Connection string, user name, password etc."
            Glyph="&#xE753;" />
        </usercontrols:CardGroup.Children>
      </usercontrols:CardGroup>
    </StackPanel>
  </Grid>
</Page>
